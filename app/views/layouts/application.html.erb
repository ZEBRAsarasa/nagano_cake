<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

          <%= link_to "ながのCAKE", root_path, class: "navbar-brand"%>
          <div class="collapse navbar-collapse" id="navbarDropdown">
            <% if customer_signed_in? %>
            ようこそ、<%= current_customer.last_name %>さん!
            <ul class="navbar-nav ml-auto">
              <li>
                <%= link_to "マイページ", customers_path, class: "fas fa-home nav-link text-light" %>
              </li>
              <li>
                <%= link_to "商品一覧", items_path, class: "fas fa-home nav-link text-light" %>
              </li>
              <li>
                <%= link_to "カート", cart_items_path, class: "fas fa-home nav-link text-light" %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "fas fa-home nav-link text-light" %>
              </li>
            </ul>
              <% elsif admin_signed_in? %>
                <ul class="navbar-nav ml-auto">
                  <li>
                  <%= link_to "商品一覧", admin_items_path, class: "fas fa-home nav-link text-light" %>
                  </li>
                  <li>
                    <%= link_to "会員一覧", admin_customers_path, class: "fas fa-home nav-link text-light" %>
                  </li>
                  <li>
                    <%= link_to "注文履歴一覧", admin_path, class: "fas fa-home nav-link text-light" %>
                  </li>
                  <li>
                    <%= link_to "ジャンル一覧", admin_genres_path, class: "fas fa-home nav-link text-light" %>
                  </li>
                   <li>
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "fas fa-home nav-link text-light" %>
                   </li>
                </ul>

          <% else %>
            <ul class="navbar-nav ml-auto">
              <li>
                <%= link_to "Admin", new_admin_session_path, class: "fas fa-home nav-link text-light" %>
              </li>
              <li>
                <%= link_to "About", homes_about_path, class: "fas fa-home nav-link text-light" %>
              </li>
              <li>
                <%= link_to "商品一覧", items_path, class: "fas fa-home nav-link text-light" %>
              </li>
              <li>
                <%= link_to "新規登録", new_customer_registration_path, class: "fas fa-home nav-link text-light" %>
              </li>
              <li>
                <%= link_to "ログイン", new_customer_session_path, class: "fas fa-home nav-link text-light" %>
              </li>
            </ul>
            <% end %>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <%= flash[:alert] %>

    <%= yield %>
    </main>

    <footer>

    </footer>
  </body>
</html>
