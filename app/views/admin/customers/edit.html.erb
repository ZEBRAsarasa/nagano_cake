<h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
  <div>
    <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件のエラーメッセージがあります。
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>
  </div>

  <table>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
  </table>

    <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch, local: true do |f| %>
      <div class="form-group">
        <%= f.label :氏名 %>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class="form-group">
        <%= f.label :フリガナ %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </div>
      <div>
        <%= f.label :郵便番号 %>
        <%= f.text_field :postal_code %>
      </div>
      <div>
        <%= f.label :住所 %>
        <%= f.text_field :address %>
      </div>
      <div>
        <%= f.label :電話番号 %>
        <%= f.text_field :telephone_number %>
      </div>
      <div>
        <%= f.label :メールアドレス %>
        <%= f.text_field :email %>
      </div>
      <div>
        <%= f.label :会員ステータス %>
        <%= f.radio_button :is_deleted, :false %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted, :true %>
        <%= f.label :is_deleted, "無効" %>
      </div>
      <div>
        <%= f.submit "変更を保存" %>
      </div>

    <% end %>

