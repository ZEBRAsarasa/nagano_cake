<h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
  <div>
    <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件のエラーメッセージがあります。
      <%= @customer.erros.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
  </div>

  <table>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <%= form_with model: @customer, local: true do |f| %>
      <tr>
        <td><%= f.label :氏名 %></td>
        <td><%= f.text_field :last_name %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td><%= f.label :フリガナ %></td>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td><%= f.label :郵便番号 %></td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td><%= f.label :住所 %></td>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <td><%= f.label :電話番号 %></td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td><%= f.label :メールアドレス %></td>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <td><%= f.label :会員ステータス %></td>
        <td>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "無効" %>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "変更を保存" %></td>
      </tr>

    <% end %>
  </table>

