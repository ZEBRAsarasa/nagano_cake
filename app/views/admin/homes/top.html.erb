<div class="container">
  <div class="row">
    <div class="col-3">
      <h3>注文履歴一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>

            <td>
              <%= link_to admin_order_path(order.id) do %>
              <%= order.customer.last_name + order.customer.first_name %>
              <% end %>
              </td>
            <td>
              <% @sum = 0 %>
              <% order.order_details.each do |order_detail| %>
              <% @sum += order_detail.amount %>
              <% end %>
              <%= @sum %>
              </td>
            <td>
              <% if order.order_status == "入金待ち" %>
              <p>入金待ち</p>
            <% elsif order.order_status == "入金確認" %>
              <p>入金確認</p>
            <% elsif order.order_status == "製作中" %>
              <p>製作中</p>
            <% elsif order.order_status == "preparing_delivery" %>
              <p>発送準備中</p>
            <% elsif order.order_status == "delivered" %>
              <p>発送済み</p>
            <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>