<div class="container">
  <div class="row">
    <div class="col-3">
      <h3>注文履歴一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <%= @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.customer.last_name + order.customer.first_name %></td>
            <td><%=  %></td>
            <td><%= order.order_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>