<div class="container">
  <div class="row">
    <div class="w-100">　</div>
    <div class="col-sm-1"></div>
    <h3 class="badge bg-secondary">ジャンル編集</h3>
    <div class="w-100">　</div>
  </div>
  <div class="row">
    <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
      <% if @genre.errors.any? %>
          <%= @genre.errors.count %>件のエラーメッセージがあります。
          <% @genre.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      <% end %>
  </div>
      <div class="form-group row">
      <%= f.label :name, "ジャンル名", class: "col-sm-2 col-form-label" %>
      <%= f.text_field :name, class: "col-sm-4" %>
      <div>　　</div>
      <%= f.submit "変更を保存", class: "col-sm-2 btn btn-success" %>
      </div>
    <% end %>

</div>