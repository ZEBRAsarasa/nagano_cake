<p id="notice"><%= flash[:notice] %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-1"></div>
    <h3 class="bg-secondary">ジャンル一覧・追加</h3>
    <div class="w-100">　</div>
  </div>
  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーメッセージがあります。
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>
  <div class="form-group row col-sm-10">
  <%= f.label :name, "ジャンル名", class: "col-sm-2 col-form-label" %>
  <%= f.text_field :name, class: "col-sm-4" %>
  <div>　　　</div>
  <%= f.submit "新規登録", class: "col-sm-2 btn btn-success" %>
  </div>
<% end %>
  <div class="row">
  <table class="table col-sm-4">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th colspan=1></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>