<p id="notice"><%= flash[:notice] %></p>
<h3>ジャンル一覧・追加</h3>
<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <% if @genre.errors.any? %>
    <%= @genre.errors.count %>件のエラーメッセージがあります。
    <% @genre.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <div class="form-group">
  <%= f.label :ジャンル名 %>
  <%= f.text_field :name %>
  </div>
  <div class="form-group">
  <%= f.submit "新規登録" %>
  </div>
<% end %>

  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
        <th colspan=1></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>