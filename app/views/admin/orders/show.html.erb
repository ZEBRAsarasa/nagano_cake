<div class="container">
  <div class="row">
    <div class="col-3">
      <h3>注文履歴詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-3">
      <h6>購入者</h6>
    </div>
    <div class="col-8">
      <%=  %>
    </div>
  </div>
  <div class="row">
    <div class="col-3">
      <h6>注文日</h6>
    </div>
    <div class="col-8">
      <%= @order.created_at %>
    </div>
  </div>
  <div class="row">
    <div class="col-3">
      <h6>配送先</h6>
    </div>
    <div class="col-8">
      <%= @order.postal_code + @order.adddress + @order.name %>
    </div>
  </div>
  <div class="row">
    <div class="col-3">
      <h6>支払方法</h6>
    </div>
    <div class="col-8">
      <%= @order.payment_method %>
    </div>
  </div>
  <div class="row">
    <div class="col-3">
      <h6>注文ステータス</h6>
    </div>
    <div class="col-8">
      <%= form_with model: @order, url: admin_order_path(@order.id) local: true do |f| %>
      <%= f.select :order_status, {"入金待ち": 0, "入金確認": 1, "製作中": 2, "発送準備中": 3, "発送済み": 4 } %>
      <%= f.submit "更新", class: "btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th col-span=1></th>
          </tr>
        </thead>
        <tbody>
          <%=  %>
          <tr>
            <td><%=  %></td>
            <td><%=  %></td>
            <td><%=  %></td>
            <td><%=  %></td>
            <td><%=  %></td>
            <td><%=  %></td>
          </tr>
          <%=  %>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <h6>商品合計</h6><%=  %>
      <h6>送料</h6><%= @order.shipping_cost %>
      <h6>請求金額合計<%= @order.total_payment %></h6>
    </div>
  </div>
</div>