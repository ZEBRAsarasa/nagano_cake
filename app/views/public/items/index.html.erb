<div class="container">
  <div class="row">
    <div class="col-2">
      <table>
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-8">
      <h1>商品一覧(全<%= @items.each.count %>件)</h1>
      <% @items.each do |item| %>
        <%= link_to item_path(item.id) do %>
        <div class="col-8">
          <%= attachment_image_tag item, :image, :fill, 100, 100 %>
          <%= item.name %>
          <%= item.price_excluding_tax %>
          </div>
        <% end %>
        <% end %>
      <%= paginate @items %>
    </div>
  </div>
</div>