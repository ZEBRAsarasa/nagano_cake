<div>
  <table>
    <tr>
      <th>ジャンル検索</th>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
    </tr>
    <% end %>
  </table>
</div>

<h1>商品一覧</h1>

<% @items.each do |item| %>
  <!--<div>-->
    <%= link_to item_path(item.id) do %>
    <%= attachment_image_tag item, :image, :fill, 100, 100 %>
    <% end %>
    <%= item.name %>
    <%= item.price_excluding_tax %>
  <!--</div>-->
<% end %>

