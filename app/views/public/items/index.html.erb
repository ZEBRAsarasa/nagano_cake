<div class="container">
  <div class="row">
    <div class="col-2">
      <table class="table">
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
        </tr>
        <% end %>
      </table>
    </div>
    <div class="col-10">

      <h3><span class="bg-secondary">商品一覧(全<%= @items.each.count %>件)</span></h3><br>

      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3">
            <div>
              <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, :fill, 200, 150 %><br>
              <% end %>
              <%= item.name %><br>
              ￥<%= item.price_excluding_tax.to_s(:delimited) %>
            </div>
          </div>
        <% end %>
      </div>
        <p class="text-center"><%= paginate @items %></p>
    </div>
  </div>
</div>