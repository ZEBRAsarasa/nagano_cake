<p id="notice"><%= notice %></p>

<div class="container"><br>
  <div class="row">
    <div class="col-1"></div>
    <h3 class="bg-secondary">　注文情報確認　</h3>
  </div>
    <div class="row">
      <div class="col-8">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= attachment_image_tag cart_item.item, :image, :fill, 50, 50 %><%= cart_item.item.name %></td>
              <td><%= (cart_item.item.price_excluding_tax*@tax).round.to_s(:delimited) %></td>
              <td><%= cart_item.amount %></td>
              <td><%= ((cart_item.item.price_excluding_tax*@tax).round*cart_item.amount).to_s(:delimited) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-4">
        <table class="table table-bordered">
          <tr>
            <td>送料</td>
            <td><%= @order.shipping_cost.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td>商品合計</td>
            <% @sum = 0 %>
            <% @cart_items.each do |cart_item| %>
              <% @sum += ((cart_item.item.price_excluding_tax*@tax).round*cart_item.amount) %>
            <% end %>
            <td><%= @sum.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td>請求金額</td>
            <% @order.total_payment = @order.shipping_cost + @sum %>
            <td><%= @order.total_payment.to_s(:delimited) %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="row">
      <strong class="col-1">支払方法</strong>
      <% if @order.payment_method == "credit" %>
        <p>クレジットカード</p>
        <% elsif @order.payment_method == "bank" %>
        <p>銀行振込</p>
      <% end %>
    </div><br>
    <div class="row">
      <strong class="col-1">お届け先</strong>
      〒<%= @order.postal_code %>
      <%= @order.address %><br>
      <%= @order.name %>
    </div>
    <div class="row">
      <div class="col-4"></div>
      <%= form_with model: @order, url: orders_path, local: true do |f| %>
        <%= f.hidden_field :postal_code, :value => @order.postal_code %>
        <%= f.hidden_field :address, :value => @order.address %>
        <%= f.hidden_field :name, :value => @order.name %>
        <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
        <%= f.hidden_field :total_payment, :value => @order.total_payment %>
        <%= f.hidden_field :payment_method, :value => @order.payment_method %>
        <%= f.hidden_field :order_status, :value => @order.order_status %>
        <%= f.hidden_field :customer_id, :value => current_customer.id %>
        <%= f.submit "注文を確定する", class: "btn btn-success" %>
      <% end %>
    </div>
</div>