<h3>配送先編集</h3>
<%= form_with model :@address, url: address_path, local: true do |f| %>
  <div class="form-group row">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-sm-2 col-form-label" %>
    <%= f.text_field :postal_code, class: "col-sm-2" %>
  </div>
  <div class="form-group">
    <%= f.label :address, "住所", class: "col-sm-2 col-form-label" %>
    <%= f.text_field :address, class: "col-sm-6" %>
  </div>
  <div>
    <%= f.label :name, "宛名", class: "col-sm-2 col-form-label" %>
    <%= f.text_field :name, class: "col-sm-2" %>
    <div class="col-sm-4"></div>
    <%= f.submit "変更内容を保存", class: "col-sm-2 btn btn-success" %>
  </div>
<% end %>