<div class="container"><br>
  <div class="row">
    <div class="col-1"></div>
    <h3 class="bg-secondary">　会員情報編集　</h3>
  </div><br>
  <div>
    <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件のエラーメッセージがあります。
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>
  </div>
  <%= form_with model: @customer, url: customers_path, local: true do |f| %>
    <div class="form-group row">
      <%= f.label :full_name, "氏名", class: "col-sm-2 col-form-label" %>
      <%= f.text_field :last_name, class: "col-sm-2" %>
      <div>　　　</div>
      <%= f.text_field :first_name, class: "col-sm-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :full_name_kana, "フリガナ", class: "col-sm-2 col-form-label" %>
      <%= f.text_field :last_name_kana, class: "col-sm-2" %>
      <div>　　　</div>
      <%= f.text_field :first_name_kana, class: "col-sm-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :postal_code, "郵便番号", class: "col-sm-2 col-form-label" %>
      <%= f.text_field :postal_code, class: "col-sm-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :address, "住所", class: "col-sm-2 col-form-label" %>
      <%= f.text_field :address, class: "col-sm-6" %>
    </div>
    <div class="form-group row">
      <%= f.label :telephone_number, "電話番号", class: "col-sm-2 col-form-label" %>
      <%= f.text_field :telephone_number, class: "col-sm-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "col-sm-2 col-form-label" %>
      <%= f.text_field :email, class: "col-sm-4" %>
    </div>
    <div class="form-group row">
      <div class="col-sm-2"></div>
      <%= f.submit "変更を保存する", class: "col-sm-2 btn btn-success" %>
      <div class="col-sm-2"></div>
      <%= link_to "退会する", cancel_customers_path, class: "col-sm-1 btn btn-danger" %>
      </div>
  <% end %>
</div>