<h3>会員情報編集</h3>
<%= form_with model: @customer, url: customer_path(@customer.id), local: true do |f| %>
<table>
  <tr>
    <td><%= f.label :氏名 %></td>
    <td><%= f.text_field :last_name %></td>
    <td><%= f.text_field :first_name %></td>
  </tr>
  <tr>
    <td><%= f.label :フリガナ %></td>
    <td><%= f.text_field :last_name_kana %></td>
    <td><%= f.text_field :first_name_kana %></td>
  </tr>
  <tr>
    <td><%= f.label :郵便番号 %></td>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <td><%= f.label :住所 %></td>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <td><%= f.label :電話番号 %></td>
    <td><%= f.text_field :telephone_number %></td>
  </tr>
  <tr>
    <td><%= f.label :メールアドレス %></td>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td></td>
    <td><%= f.submit "変更を保存する" %></td>
    <td><%= link_to "退会する", customers_cancel_path %></td>
  </tr>
</table>
<% end %>