<div class="container">
<h3><span class="bg-secondary">管理者ログイン</span></h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group row">
    <div class="col-sm-1"></div>
    <%= f.label :email, "メールアドレス", class: "col-sm-2 col-form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-4" %>
  </div>

  <div class="form-group row">
    <div class="col-sm-1"></div>
    <%= f.label :password, "パスワード", class: "col-sm-2 col-form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-4" %>
  </div>

  <!--<% if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%= f.check_box :remember_me %>-->
  <!--    <%= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<% end %>-->

  <div class="form-group row">
    <div class="col-sm-3"></div>
    <%= f.submit "ログイン", class: "col-sm-2 btn btn-primary" %>
  </div>
<% end %>
</div>
