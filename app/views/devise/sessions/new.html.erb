<p id="notice", class="text-center"><%= notice %></p>

<div class="container"><br>
  <div class="row">
    <div class="col-1"></div>
    <h3 class="bg-secondary">　ログイン　</h3>
  </div><br>
  <div class="row">
    <div class="col-1"></div>
    　<p class="bg-secondary">　会員の方はこちらからログイン　</p>
  </div><br>

    <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
      <div class="form-group row">
        <div class="col-sm-1"></div>
        <%= f.label :email, "メールアドレス", class: "col-sm-2 col-form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-4" %>
      </div>

      <div class="form-group row">
        <div class="col-sm-1"></div>
        <%= f.label :password, "パスワード", class: "col-sm-2 col-form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-4" %>
      </div>

      <!--<% if devise_mapping.rememberable? %>-->
      <!--  <div class="field">-->
      <!--    <%= f.check_box :remember_me %>-->
      <!--    <%= f.label :remember_me %>-->
      <!--  </div>-->
      <!--<% end %>-->

      <div class="form-group row">
        <div class="col-sm-3"></div>
        <%= f.submit "ログイン", class: "col-sm-2 btn btn-primary" %>
      </div>
    <% end %>
  <div class="row">
    <div class="col-1"></div>
    　<p class="bg-secondary">　会員登録がお済みでない方　</p>
  </div>
  <div class="row">
    <div class="col-sm-1"></div>
    <p>　　<%= link_to "こちら", new_customer_registration_path %>　から新規登録を行ってください。</p>
  </div>
      <!--<%= render "devise/shared/links" %>-->

</div>