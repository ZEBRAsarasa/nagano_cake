<div class="container">
  <div class="row">
    <h3 class="bg-secondary">新規会員登録</h3>
  </div>

  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <%= f.label :full_name, "氏名", class: "col-2" %>
      <%= f.label :last_name, "( 姓 )", class: "col-1" %>
      <%= f.text_field :last_name, class: "col-2" %>
      <%= f.label :first_name, "( 名 )", class: "col-1" %>
      <%= f.text_field :first_name, class: "col-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :full_name_kana, "フリガナ", class: "col-2" %>
      <%= f.label :last_name_kana, "(セイ)", class: "col-1" %>
      <%= f.text_field :last_name_kana, class: "col-2" %>
      <%= f.label :first_name_kana, "(メイ)", class: "col-1" %>
      <%= f.text_field :first_name_kana, class: "col-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class: "col-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-4" %>
    </div>

    <div class="form-group row">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-3" %>
      <%= f.text_field :postal_code, class: "col-2" %>
    </div>

    <div class="form-group row">
      <%= f.label :address, "住所", class: "col-3" %>
      <%= f.text_field :address, class: "col-5" %>
    </div>

    <div class="form-group row">
      <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-3" %>
      <%= f.text_field :telephone_number, class: "col-2" %>
    </div>

    <div class="form-group row">
      <%= f.label :password, "パスワード(6文字以上)", class: "col-3" %>
      <!--<% if @minimum_password_length %>-->
      <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
      <!--<% end %>-->
      <%= f.password_field :password, autocomplete: "new-password", class: "col-2" %>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-2" %>
    </div>

    <div class="actions form-group row">
      <div class="col-3"></div>
      <%= f.submit "新規登録", class: "col-2 btn btn-success" %>
    </div>

  <% end %>
    <div class="row">
      <div class="col-1"></div>
      <h6 class="bg-secondary"><strong>既に登録済みの方</strong></h6>
    </div>

    <div class="row">
      <div class="col-1"></div>
      <p><%= link_to "こちら", new_customer_session_path %>　からログインしてください</p>
    </div>

  <!--<%= render "devise/shared/links" %>-->
</div>